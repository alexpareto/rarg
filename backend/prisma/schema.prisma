generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TestModel {
  id   Int    @id @default(autoincrement())
  name String
}

model GeneralCache {
  cacheKey  String   @id
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inference {
  id              String   @id @default(uuid())
  cacheKey        String
  name            String?
  model           String
  output          String
  outputJson      Json?
  inputMessages   Json
  userMessage     String?
  systemMessage   String?
  numInputTokens  Int
  numOutputTokens Int
  latencySeconds  Float
  skippedCache    Boolean
  estimatedCost   Float?
  tracerUuid      String?
  createdAt       DateTime @default(now())

  @@index([cacheKey, createdAt(sort: Desc)])
}
