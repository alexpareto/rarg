generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TestModel {
  id   Int    @id @default(autoincrement())
  name String
}

model GeneralCache {
  cacheKey  String   @id
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inference {
  id              String   @id @default(uuid())
  cacheKey        String
  name            String?
  model           String
  output          String
  outputJson      Json?
  inputMessages   Json
  userMessage     String?
  systemMessage   String?
  numInputTokens  Int
  numOutputTokens Int
  latencySeconds  Float
  skippedCache    Boolean
  estimatedCost   Float?
  tracerUuid      String?
  createdAt       DateTime @default(now())

  @@index([cacheKey, createdAt(sort: Desc)])
}

model Program {
  id          Int      @id @default(autoincrement())
  body        String
  name        String
  signature   String
  description String
  fitness     Float    @default(0.0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  invocations ProgramInvocation[]
}

model ProgramInvocation {
  id                   Int                 @id @default(autoincrement())
  program              Program             @relation(fields: [programId], references: [id])
  programId            Int
  inputArgs            Json
  outputArgs           Json
  previousInvocation   ProgramInvocation?  @relation("InvocationGraph", fields: [previousInvocationId], references: [id])
  previousInvocationId Int?
  nextInvocations      ProgramInvocation[] @relation("InvocationGraph")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([programId])
}
